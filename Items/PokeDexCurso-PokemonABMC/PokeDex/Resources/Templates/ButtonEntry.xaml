<UserControl x:Name="EntryCard" x:Class="PokeDex.Resources.Templates.ButtonEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeDex.Resources.Templates"
             mc:Ignorable="d" Loaded="EntryCard_Loaded" >
    <Button x:Name="Mainbutton" Style="{DynamicResource EntryButtonStyle}" Height="278" Width="500" Click="Mainbutton_Click">
        <Grid Height="278"  Width="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="113*"/>
                <RowDefinition Height="26*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="44*"/>
                <ColumnDefinition Width="81*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="PokeImage" Source="/Resources/PokeImages/MisingNo.jpg" Margin="0,31,2,1"/>
            <Label x:Name="EntryBigLabel" Content="#000" FontSize="150" Grid.ColumnSpan="2" Opacity="0.1" FontFamily="Arial" FontWeight="Bold" Height="182" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.RowSpan="2"/>

            <Label x:Name="EntrySmallLabel" Content="#$3ad12" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="28"  FontFamily="Arial" FontWeight="Normal" Margin="10,108,0,0" Height="50" Width="86" Grid.Column="1"/>
            <Label x:Name="NameLabel" Content="¿?&quot;¿!HNOU!&quot;BN!&quot;NKJ" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="34"  FontFamily="Arial Black" FontWeight="Normal" Margin="0,139,0,0" Grid.Column="1" Height="49" Width="318"/>
            <Grid x:Name="StatsGrid" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="WeightBorder" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" Background="#FFC5C5C5" Grid.Column="0">
                    <Label x:Name="WeightLabel" VerticalAlignment="Center" Content="0.1 Kg" FontSize="14" FontFamily="Arial" />
                </Border>
                <Border x:Name="SizeBorder" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" Background="#FFC5C5C5" Grid.Column="1">
                    <Label x:Name="SizeLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Content="0.1 m" FontSize="14" FontFamily="Arial"/>
                </Border>
            </Grid>
            <WrapPanel x:Name="TypesWrap" Grid.Column="1" Grid.Row="1">
                <Border x:Name="FirstTypeBorder" CornerRadius="15" Background="#FFC24125" BorderBrush="Black" BorderThickness="2" Padding="10 0" Width="150" Margin="5">
                    <Label x:Name="FirstLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Fuego" FontSize="18" FontFamily="Arial"/>
                </Border>
                <Border x:Name="SecondTypeBorder" CornerRadius="15" Background="#FFC24125" BorderBrush="Black" BorderThickness="2" Padding="10 0" Width="150" Margin="5">
                    <Label x:Name="SecondLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Fuego" FontSize="18" FontFamily="Arial"/>
                </Border>
            </WrapPanel>
        </Grid>
    </Button>
</UserControl>
