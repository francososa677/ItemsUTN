<UserControl x:Class="PokeDex.Views.OldPokedexControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeDex.Views"
             mc:Ignorable="d" 
            Height="1100"
            Width="850"
            MinHeight="550"
            MinWidth="425"
            MaxHeight="1100"
            MaxWidth="850">
    <UserControl.Background>
        <RadialGradientBrush>
            <GradientStop Color="Black"/>
            <GradientStop Color="#FFDD2828" Offset="1"/>
            <GradientStop Color="#FFF13232"/>
        </RadialGradientBrush>
    </UserControl.Background>
    <Viewbox x:Name="MainView" Stretch="Fill" >
        <Grid x:Name="MainGrid" Height="1400" Width="1000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="GrillaArriba" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Border x:Name="BordeNegro" BorderBrush="Black" BorderThickness="3" CornerRadius="45"  Margin="60,18,60,25"/>
                <Border x:Name="BordeAzul" BorderBrush="Black" BorderThickness="3" Width="80" CornerRadius="45" Background="#FF58B0E9" Margin="66,25,66,30"/>
                <Label x:Name="MainTitle" Grid.Column="1" Content="Pokedex" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Cambria" FontSize="48"/>
                <Border x:Name="BordePokeball" BorderBrush="Black" BorderThickness="3" CornerRadius="45" Grid.Column="2" Margin="70,25,53,25">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resources/Images/Pokeball.png"/>
                    </Border.Background>
                </Border>
            </Grid>
            <Border x:Name="BordeCentral" Grid.Column="1" Grid.Row="1" Background="#FFEEEEEE" BorderBrush="Gray" BorderThickness="5 0 5 5">
                <Grid x:Name="GrillaCentral">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="11*"/>
                    </Grid.RowDefinitions>
                    <WrapPanel x:Name="WrapTipos">
                        <Button x:Name="BotonTodos" Padding="15" Content="VER TODOS" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonVuelo" Padding="15" Content="VUELO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonAgua" Padding="15" Content="AGUA" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria" Background="#FF4592C4"/>
                        <Button x:Name="BotonNormal" Padding="15" Content="NORMAL" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonHielo" Padding="15" Content="HIELO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonFuego" Background="#fd7d24" Padding="15" Content="FUEGO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonTierra" Padding="15" Content="TIERRA" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonElectrico" Padding="15" Content="ELECTRICO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonPiedra" Padding="15" Content="PIEDRA" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonVeneno" Background="#b97fc9" Padding="15" Content="VENENO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonDragon" Padding="15" Content="DRAGON" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonHada" Padding="15" Content="HADA" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonAcero" Padding="15" Content="ACERO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonOscuro" Padding="15" Content="OSCURO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonFantasma" Padding="15" Content="FANTASMA" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonPsiquico" Padding="15" Content="PSIQUICO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonBicho" Padding="15" Content="BICHO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonLucha" Padding="15" Content="LUCHA" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                        <Button x:Name="BotonPlanta" Background="#9bcc50" Padding="15" Content="PLANTA" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Cambria"/>
                    </WrapPanel>
                    <WrapPanel x:Name="WraPokemones" Grid.Row="1" Background="#FFDFDFDF">
                        <Border x:Name="BulbasaurBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="BulbasaurGrid">
                                <Image x:Name="BulbasaurImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="124" Width="124" Source="/Resources/PokeImages/Bulbasaur.png"/>
                                <Label x:Name="BulbasaurNombre" Content="BULBASAUR" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="BulbasaurID" Content="#001" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Bulbasaur" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#9bcc50" Margin="0 0 100 5" Height="35" Width="85" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1BulGrid">
                                        <Label Content="PLANTA" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                                <Border x:Name="Tipo2Bulbasaur" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#b97fc9" Margin="100 0 0 5" Height="35" Width="85" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo2BulGrid">
                                        <Label Content="VENENO" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="IvysaurBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="IvysaurGrid">
                                <Image x:Name="IvysaurImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="124" Width="124" Margin="0,1,0,0" Stretch="Fill"/>
                                <Label x:Name="IvysaurNombre" Content="IVYSAUR" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="IvysaurID" Content="#002" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Ivysaur" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#9bcc50" Margin="0 0 100 5" Height="35" Width="85" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1IvyGrid">
                                        <Label Content="PLANTA" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                                <Border x:Name="Tipo2Ivybasaur" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#b97fc9" Margin="100 0 0 5" Height="35" Width="85" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo2IvyGrid">
                                        <Label Content="VENENO" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="VenusaurBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="VenusaurGrid">
                                <Image x:Name="VenusaurImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="150" Width="135" Margin="0,1,0,0" Source="/Resources/PokeImages/Venusaur.png" Stretch="Fill"/>
                                <Label x:Name="VenusaurNombre" Content="VENUSAUR" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="VenusaurID" Content="#003" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Venusaur" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#9bcc50" Margin="0 0 100 5" Height="35" Width="85" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1VenusaurGrid">
                                        <Label Content="PLANTA" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                                <Border x:Name="Tipo2Venusaur" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#b97fc9" Margin="100 0 0 5" Height="35" Width="85" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo2VenusaurGrid">
                                        <Label Content="VENENO" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="CharmanderBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="CharmanderGrid">
                                <Image x:Name="CharmanderImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="124" Width="124" Source="/Resources/PokeImages/Charmander.png"/>
                                <Label x:Name="CharmanderNombre" Content="CHARMANDER" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="70,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="CharmanderID" Content="#004" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Charmander" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#fd7d24" Margin="0,156,0,0" Height="35" Width="84" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1CharGrid">
                                        <Label Content="FUEGO" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Border>
                        <Border x:Name="CharmeleonBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="CharmeleonGrid">
                                <Image x:Name="CharmeleonImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="134" Width="148" Source="/Resources/PokeImages/Charmeleon.png"/>
                                <Label x:Name="CharmeleonNombre" Content="CHARMELEON" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="70,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="CharmeleonID" Content="#005" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Charmeleon" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#fd7d24" Margin="0,156,0,0" Height="35" Width="84" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1CharmeleonGrid">
                                        <Label Content="FUEGO" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Border>
                        <Border x:Name="CharizardBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="CharizardGrid">
                                <Image x:Name="CharizardImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="140" Width="166" Source="/Resources/PokeImages/Charizard.png"/>
                                <Label x:Name="CharizardNombre" Content="CHARIZARD" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="70,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="CharizardID" Content="#006" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Charizard" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#fd7d24" Margin="0,156,0,0" Height="35" Width="84" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1CharizardGrid">
                                        <Label Content="FUEGO" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Border>
                        <Border x:Name="SquirtleBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="SquirtleGrid">
                                <Image x:Name="SquirtleImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="124" Width="124" Source="/Resources/PokeImages/Squirtle.png"/>
                                <Label x:Name="SquirtleNombre" Content="SQUIRTLE" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="70,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="SquirtleID" Content="#007" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Squirtle" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#FF4592C4" Margin="0,156,0,0" Height="35" Width="84" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1SquGrid">
                                        <Label Content="AGUA" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="WartotleBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="WartotleGrid">
                                <Image x:Name="WartotleImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="124" Width="124" Source="/Resources/PokeImages/Wartotle.png"/>
                                <Label x:Name="WartotleNombre" Content="WARTOTLE" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="70,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="WartotleID" Content="#008" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Wartotle" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#FF4592C4" Margin="0,156,0,0" Height="35" Width="84" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1WarGrid">
                                        <Label Content="AGUA" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                        <Border x:Name="BlasBorder" CornerRadius="7" Background="White" BorderBrush="Black" Height="200" Width="236" Margin="20" BorderThickness="2">
                            <Grid x:Name="BlasGrid">
                                <Image x:Name="BlasImage"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="124" Width="124" Source="/Resources/PokeImages/Blastoise.png"/>
                                <Label x:Name="BlasNombre" Content="BLASTOISE" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="70,0,0,40" FontWeight="Bold" FontSize="16"></Label>
                                <Label x:Name="BlasID" Content="#009" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,40" FontSize="16"/>
                                <Border x:Name="Tipo1Blas" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="#FF4592C4" Margin="0,156,0,0" Height="35" Width="84" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <Grid x:Name="Tipo1BlasGrid">
                                        <Label Content="AGUA" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </WrapPanel>
                </Grid>
            </Border>
            <Border x:Name="BordeAbajo" Grid.Column="1" Grid.Row="2" Background="#FF636363" Margin="-10 15" CornerRadius="35">
                <Grid x:Name="GrillaAbajo">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="57*"/>
                        <RowDefinition Height="167*"/>
                    </Grid.RowDefinitions>
                    <Border x:Name="BordeNombre" CornerRadius="15" BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3" Margin="25,8,25,0" Background="#FF8DC73F">
                        <Grid x:Name="GrillaNombre">
                            <Label x:Name="Etiqueta1"  Content=" Nombre del Pokemon:" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Cambria" FontSize="32" FontWeight="Bold"/>
                            <Label x:Name="EtiquetaNombre"  Content="----------------------------------------" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Cambria" FontSize="32" FontWeight="Bold"/>
                        </Grid>
                    </Border>
                    <Border x:Name="BordeDatos" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Margin="10,23,10,10" Background="#FF8DC73F" Grid.Row="1" Grid.Column="1">
                        <Grid x:Name="GrillaDatos">
                            <Label x:Name="Etiqueta2"  Content=" Descripcion &#xD;&#xA; del pokemon" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Cambria" FontSize="32" FontWeight="Bold" Height="94"/>
                        </Grid>
                    </Border>
                    <Image x:Name="ImagenPad" Height="100" Width="100" Grid.Row="1" Source="/Resources/Images/PadPokemon.png"/>
                    <Image x:Name="ImagenExtra" Height="120" Width="120" Grid.Row="1" Source="/Resources/Images/ExtraButtons.png" Grid.Column="2" Margin="25,24,25,24"/>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>