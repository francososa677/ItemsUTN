<Window x:Class="PokeDex.Views.EditItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modificar Item" 
        Height="450" Width="600" 
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryColorBack}">

    <Viewbox x:Name="MainView" Stretch="Fill">
        <Border x:Name="MainBorder" Height="450" Width="600" Margin="20" CornerRadius="15" Background="{DynamicResource SecondaryColorBack}">
            <Grid x:Name="MainGrid" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nombre -->
                <Label Content="Nombre:" Grid.Row="1" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <TextBox x:Name="NameTextBox" Grid.Row="1" Margin="150,10,0,0" FontSize="20"/>

                <!-- Stock máximo -->
                <Label Content="Stock máximo:" Grid.Row="2" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <TextBox x:Name="MaxStockTextBox" Grid.Row="2" Margin="150,10,0,0" FontSize="20"/>

                <!-- Fecha de creación -->
                <Label Content="Fecha creación:" Grid.Row="3" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <TextBox x:Name="CreationDateTextBox" Grid.Row="3" Margin="150,10,0,0" IsReadOnly="True" FontSize="20" Background="#FF3A3A3A" Foreground="WhiteSmoke"/>

                <!-- Efecto -->
                <Label Content="Efecto:" Grid.Row="4" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <TextBox x:Name="EffectTextBox" Grid.Row="4" Margin="150,10,0,0" Height="80" TextWrapping="Wrap" AcceptsReturn="True" FontSize="20"/>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6" Margin="0,20,0,0">
                    <Button x:Name="SaveButton" Style="{DynamicResource OptionsButton}" Content="Guardar" Width="120" Margin="10" Click="SaveButton_Click"/>
                    <Button x:Name="CancelButton" Style="{DynamicResource OptionsButton}" Content="Cancelar" Width="120" Margin="10" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Viewbox>
</Window>
