<UserControl x:Name="UserItems" x:Class="PokeDex.Views.ItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeDex.Views"
             mc:Ignorable="d" 
             Height="950"
             Width="1650" Loaded="UserItems_Loaded">
    <Viewbox x:Name="MainView" Stretch="Fill">
        <Border x:Name="MainBorder" Height="925" Width="1625" Margin="25" CornerRadius="15" Background="{DynamicResource SecondaryColorBack}">
            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="74*"/>
                    <!-- Botones -->
                    <RowDefinition Height="680*"/>
                    <!-- WrapPanel -->
                </Grid.RowDefinitions>

                <!-- Botón para agregar nuevo item -->
                <Grid x:Name="OptionGrid" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="NewItemButton" Style="{DynamicResource OptionsButton}" Content="Agregar Item" Grid.Column="3" Click="NewItemButton_Click"/>
                </Grid>

                <!-- WrapPanel donde se agregan los botones de items -->
                <ScrollViewer x:Name="MainScroll" Grid.Row="1">
                    <WrapPanel x:Name="MainWrap" Margin="20"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
