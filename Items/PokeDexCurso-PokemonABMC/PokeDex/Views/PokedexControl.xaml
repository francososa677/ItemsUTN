<UserControl x:Name="UserPrueba" x:Class="PokeDex.Views.PokedexControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokeDex.Views"
             mc:Ignorable="d" 
             Height="950"
             Width="1650" Loaded="UserPrueba_Loaded">
    <Viewbox x:Name="MainView" Stretch="Fill">
        <Border x:Name="MainBorder" Height="925" Width="1625" Margin="25" CornerRadius="15" Background="{DynamicResource SecondaryColorBack}">
            <Grid x:Name="MainGrid" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="171*"/>
                    <RowDefinition Height="74*"/>
                    <RowDefinition Height="680*"/>
                </Grid.RowDefinitions>
                <WrapPanel x:Name="TypesWrap" Margin="20,20,20,0">
                    <Button Style="{DynamicResource TypeButtonStyle}" Content="Todos" Background="#FF878890" Click="Type_Click"/>
                </WrapPanel>
                <ScrollViewer x:Name="MainScroll" Grid.Row="2">
                    <WrapPanel x:Name="MainWrap" Grid.Row="1" Margin="20">

                    </WrapPanel>
                </ScrollViewer>
                <Grid x:Name="OptionGrid" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="NewTypeButton" Style="{DynamicResource OptionsButton}" Content="Nuevo Tipo" Grid.Column="1" Click="NewTypeButton_Click"/>
                    <Button x:Name="ModTypeButton" Style="{DynamicResource OptionsButton}" Content="Modificar Tipo" Grid.Column="2"  Margin="10,15,20,15" Click="ModTypeButton_Click"/>
                    <Button x:Name="NewPokeButton" Style="{DynamicResource OptionsButton}" Content="Agregar Pokemon" Grid.Column="3"  Margin="10,15,20,15" Click="NewPokeButton_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>