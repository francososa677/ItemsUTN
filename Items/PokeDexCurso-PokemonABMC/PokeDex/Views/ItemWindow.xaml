<Window x:Class="PokeDex.Views.ItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle del Item" Height="500" Width="600" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryColorBack}">
    <Viewbox x:Name="MainView" Stretch="Fill">
        <Grid Margin="20" Width="560" Height="460">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Panel con borde y fondo translúcido -->
            <Border Grid.Row="0"
                    Background="#25FFFFFF"
                    CornerRadius="15"
                    Padding="20"
                    BorderBrush="WhiteSmoke"
                    BorderThickness="2"
                    Margin="0,0,0,20">
                <StackPanel x:Name="ItemInfoPanel" VerticalAlignment="Center" HorizontalAlignment="Center">

                    <!-- Nombre del Item -->
                    <TextBlock x:Name="ItemNameLabel"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="WhiteSmoke"
                               FontFamily="Courier New"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- Línea divisoria -->
                    <Separator Margin="20,10" Background="WhiteSmoke" Height="2"/>

                    <!-- Descripción -->
                    <TextBlock x:Name="ItemDescriptionText"
                               TextWrapping="Wrap"
                               FontSize="20"
                               Foreground="WhiteSmoke"
                               FontFamily="Arial"
                               TextAlignment="Center"
                               Margin="10"/>
                </StackPanel>
            </Border>

            <!-- Botones de acción -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">

                <Button x:Name="ModifyButton"
                        Style="{DynamicResource OptionsButton}"
                        Content="Modificar"
                        Width="140"
                        Height="45"
                        Margin="0,0,10,0"
                        Click="ModifyButton_Click"/>

                <Button x:Name="DeleteButton"
                        Style="{DynamicResource OptionsButton}"
                        Content="Eliminar"
                        Width="140"
                        Height="45"
                        Margin="0,0,10,0"
                        Click="DeleteButton_Click"/>

                <Button x:Name="CloseButton"
                        Style="{DynamicResource OptionsButton}"
                        Content="Cerrar"
                        Width="140"
                        Height="45"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
