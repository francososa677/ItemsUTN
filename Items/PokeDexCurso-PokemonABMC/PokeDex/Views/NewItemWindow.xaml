<Window x:Class="PokeDex.Views.NewItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Item" Height="450" Width="600" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryColorBack}">
    <Viewbox x:Name="MainView" Stretch="Fill">
        <Grid Margin="20" Width="560" Height="410">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Nuevo Item"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="WhiteSmoke"
                       FontFamily="Courier New"/>

            <!-- Contenido principal -->
            <StackPanel Grid.Row="1" Margin="40,0,40,0">
                <!-- Nombre -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Nombre:" 
                           Width="140"
                           VerticalAlignment="Center"
                           Foreground="WhiteSmoke" 
                           FontFamily="Courier New" 
                           FontWeight="SemiBold"/>
                    <TextBox x:Name="NameTextBox" Width="300"/>
                </StackPanel>

                <!-- Stock máximo -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Stock máximo:" 
                           Width="140"
                           VerticalAlignment="Center"
                           Foreground="WhiteSmoke" 
                           FontFamily="Courier New" 
                           FontWeight="SemiBold"/>
                    <TextBox x:Name="MaxStockTextBox" Width="100"/>
                </StackPanel>

                <!-- Efecto -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Efecto:" 
                           Width="140"
                           VerticalAlignment="Top"
                           Foreground="WhiteSmoke" 
                           FontFamily="Courier New" 
                           FontWeight="SemiBold"/>
                    <TextBox x:Name="EffectTextBox" 
                             Width="300" 
                             Height="100"
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"/>
                </StackPanel>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Grid.Row="2" 
                        Margin="0,20,0,0">
                <Button x:Name="SaveButton" 
                        Style="{DynamicResource OptionsButton}" 
                        Content="Guardar" 
                        Width="120" 
                        Height="40" 
                        Margin="0,0,10,0" 
                        Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" 
                        Style="{DynamicResource OptionsButton}" 
                        Content="Cancelar" 
                        Width="120" 
                        Height="40" 
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
