<Window x:Name="TypeWin" x:Class="PokeDex.Views.TypeForms.TypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeDex.Views.TypeForms"
        mc:Ignorable="d"
        Title="Tipos Pokemon" 
        Height="500" 
        Width="400"
        Background="{DynamicResource PrimaryColorBack}" WindowStartupLocation="CenterScreen" Loaded="TypeWin_Loaded"
        >
    <Viewbox x:Name="MainView" Stretch="Fill">
        <Grid x:Name="MainGrid" Height="500" Width="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label x:Name="TitleLabel" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" Content="Agregar nuevo Tipo" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" Grid.ColumnSpan="2" Margin="33,0,0,0"/>
            <Label x:Name="Label1" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" Content="Nombre del Tipo" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Grid.Row="1" Margin="0,32,0,0"/>
            <Label x:Name="Label2" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" Content="Abreviatura" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Grid.Row="2" Margin="0,24,0,0"/>
            <Label x:Name="Label3" Foreground="WhiteSmoke" FontFamily="{DynamicResource TitleFont}" Content="Color (Hexadecimal)" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Grid.Row="3" Margin="0,24,0,0" Grid.ColumnSpan="2"/>

            <ComboBox x:Name="TypesCombos" Visibility="Collapsed" HorizontalAlignment="Left" FontSize="20" Margin="35,70,0,0" Grid.Row="1" VerticalAlignment="Top" Width="318" Grid.ColumnSpan="2" SelectionChanged="TypesCombos_SelectionChanged"/>
            <TextBox x:Name="NameTextBox"  Foreground="Gray" HorizontalAlignment="Left" Margin="33,70,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Nombre..." VerticalAlignment="Top" Width="320" FontSize="22" Grid.ColumnSpan="2" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Nombre..."/>
            <TextBox x:Name="ShortTextBox" Foreground="Gray" HorizontalAlignment="Left" Margin="33,62,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Abreviatura..." VerticalAlignment="Top" Width="320" FontSize="22" Grid.ColumnSpan="2"  GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Abreviatura..."/>
            <TextBox x:Name="ColorTextBox" Foreground="Gray" HorizontalAlignment="Left" Margin="33,62,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Color..." VerticalAlignment="Top" Width="320" FontSize="22" Grid.ColumnSpan="2"  GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Tag="Color..."/>

            <Button x:Name="VarButton" Style="{DynamicResource OptionsButton}" Content="Crear" HorizontalAlignment="Stretch" Margin="10" Grid.Row="4" VerticalAlignment="Stretch" Click="VarButton_Click" />
            <Button x:Name="DeleteButton" Style="{DynamicResource OptionsButton}" Content="X" Margin="77,10,47,10" Grid.Row="4" Grid.Column="1" Visibility="Collapsed" Click="DeleteButton_Click"/>

        </Grid>
    </Viewbox>
</Window>
